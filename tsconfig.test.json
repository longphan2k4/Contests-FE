{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "allowJs": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "moduleResolution": "node",
    "isolatedModules": false
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/tests/**/*",
    "**/__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
